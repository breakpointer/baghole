<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="@string/choose_team_colors" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:id="@+id/textView1"></TextView>
    <TextView android:text="@string/team_1_name" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:id="@+id/textView2"></TextView>
    <HorizontalScrollView android:id="@+id/horizontalScrollViewTeam1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
      	  <Button android:text="Red/Blue" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  		  <Button android:text="Yellow/White" android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    		<Button android:text="Brown/Gold" android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
   			<Button android:text="Purple/White" android:id="@+id/button4" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
   			<Button android:text="Yellow/Red" android:id="@+id/button5" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView android:text="@string/team_2_name" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:id="@+id/textView2"></TextView>
    <HorizontalScrollView android:id="@+id/horizontalScrollViewTeam2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
      	  <Button android:text="Red/Blue" android:id="@+id/button6" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  		  <Button android:text="Yellow/White" android:id="@+id/button7" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    		<Button android:text="Brown/Gold" android:id="@+id/button8" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
   			<Button android:text="Purple/White" android:id="@+id/button9" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
   			<Button android:text="Yellow/Red" android:id="@+id/button10" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </LinearLayout>
    </HorizontalScrollView>
    <Button android:text="@string/start_game_text" android:id="@+id/start_game_button" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
